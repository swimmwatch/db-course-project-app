<style>
    .loader {
        position: fixed;
        display: flex;
        width: 100%;
        height: 100%;
    }

    .loader_hide {
        display: none;
    }

    .loader__dots {
        margin: auto;
    }

    .loader__dot {
        width: 10px;
        height: 10px;
        display: inline-block;
        border-radius: 100%;
        background-color: #000;
        transition: opacity .4s;
        animation: .6s linear 0s infinite alternate fade-dot;
    }

    .loader__dot:nth-child(1) {
        animation-delay: .2s;
    }

    .loader__dot:nth-child(2) {
        animation-delay: .4s;
    }

    .loader__dot:nth-child(3) {
        animation-delay: .6s;
    }

    @keyframes fade-dot {
        from {
            opacity: 100%;
        }

        to {
            opacity: 0;
        }
    }
</style>

<div class="loader">
    <div class="loader__dots">
        <div class="loader__dot"></div>
        <div class="loader__dot"></div>
        <div class="loader__dot"></div>
    </div>
</div>